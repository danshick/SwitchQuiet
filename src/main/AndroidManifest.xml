<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.danshick.switchquiet">
    <application android:label="SwitchQuiet">
        <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
        <activity android:name="MainActivity"
            android:theme="@style/SQTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name="BootBroadcastReceiver">  
          <intent-filter>
            <action android:name="android.intent.action.BOOT_COMPLETED" />
          </intent-filter>  
        </receiver>
        <receiver android:name="SwitchBroadcastReceiver">  
          <intent-filter>  
            <action android:name="com.oem.intent.action.THREE_KEY_MODE" />  
          </intent-filter>  
        </receiver>
        <service android:name="SQService"
                 android:label="SwitchQuiet">
          <intent-filter>  
            <action android:name="net.danshick.switchquiet.SWITCH_STATE_CHANGED" />  
          </intent-filter> 
        </service>
    </application>
</manifest>